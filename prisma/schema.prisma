generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Kelurahan {
  id        Int        @id @default(autoincrement())
  nama      String     @unique
  posyandu  Posyandu[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

enum Akreditasi {
  PARIPURNA
  PRATAMA
  MADYA
  PURNAMA
  MANDIRI
  BELUM_AKREDITASI
}

model Posyandu {
  id              Int        @id @default(autoincrement())
  nama            String
  alamat          String
  wilayah         String
  kelurahanId     Int?
  kelurahan       Kelurahan? @relation(fields: [kelurahanId], references: [id])
  penanggungJawab String
  noHp            String
  akreditasi      Akreditasi
  longitude       Float
  latitude        Float
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  kader           Kader[]
}

model Kader {
  id         Int      @id @default(autoincrement())
  nama       String
  nik        String   @unique
  noHp       String
  alamat     String
  posyanduId Int
  posyandu   Posyandu @relation(fields: [posyanduId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Role {
  id        Int      @id @default(autoincrement())
  nama      String   @unique // admin, kader, orang_tua_balita, ibu_hamil
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id           Int      @id @default(autoincrement())
  nama         String
  email        String   @unique
  noHp         String
  noKK         String? // Nomor Kartu Keluarga (hanya ibu_balita/ibu_hamil)
  nik          String   @unique
  tanggalLahir DateTime
  alamat       String
  password     String
  roleId       Int
  role         Role     @relation(fields: [roleId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Otp {
  id        Int      @id @default(autoincrement())
  email     String
  kode      String
  expiredAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email]) // Mempercepat pencarian berdasarkan email
}
