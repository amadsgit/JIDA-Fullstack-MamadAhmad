generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Akreditasi {
  Paripurna
  Pratama
  Madya
  Purnama
  Mandiri
  Belum_akreditasi
}

model Posyandu {
  id              Int        @id @default(autoincrement())
  nama            String
  alamat          String
  wilayah         String
  kelurahan       String
  penanggungJawab String
  noHp            String
  akreditasi      Akreditasi
  longitude       String
  lattitude       String
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  kader           Kader[]
}

model Kader {
  id          Int      @id @default(autoincrement())
  nama        String
  nik         String   @unique
  noHp        String
  alamat      String
  posyanduId  Int
  posyandu    Posyandu @relation(fields: [posyanduId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


